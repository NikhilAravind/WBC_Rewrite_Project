													&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												td
													&nbsp;&nbsp;&nbsp;
													input.border(id= 'q4'+val)(type="text", name="q4"+val, value=(allPredictions?(allPredictions[i]?(allPredictions[i][3]?allPredictions[i][3]:''):''):''), size="5")
													&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												td
													input.border(id= 'q5'+val)(type="text", name="q5"+val, value=(allPredictions?(allPredictions[i]?(allPredictions[i][4]?allPredictions[i][4]:''):''):''), size="5")
													&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

											tr
												td
													<p>&nbsp;&nbsp;2016</p>
												td
